<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workers Spy"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="16dp" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >


       <EditText
           android:id="@+id/uname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Váš email"
           android:inputType="text"
           android:layout_weight="1"
           android:textColor="@color/blue"
           android:paddingLeft="20dp"
           android:minHeight="50dp"
           android:background="@drawable/edit_text_backgroud"/>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/blue"
            tools:ignore="DuplicateIds"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"
            android:background="@drawable/edit_text_backgroud"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Přihlásit"
            android:textSize="18sp" />
        <Button
            android:visibility="gone"
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Odhlásit"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/output"
            android:layout_width="603dp"
            android:gravity="center"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/textview_background"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"


            android:text="infromace"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/workButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/startWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Začít práci"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/stopWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukončit práci"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>